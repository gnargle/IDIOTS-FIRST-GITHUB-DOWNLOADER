@model GithubDLWeb.Models.SearchResult

@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
<p>Enter a repository name or URL and search to get a Simple Download Link, you idiot.</p>
    <input type="text" id="searchString" name="searchString" onchange="search()" />
    <button onclick="search()">Search</button>
</div>

<table class="table">
    <tbody>
@foreach (var item in Model.Results) {
        <tr>                
            <td class="ghDownload" >
                <a href="@item.DownloadURL">
                    <i class="fa-solid fa-download"></i>
                    @Html.DisplayFor(i => item.RepoName)
                </a>
            </td>            
        </tr>
}
    </tbody>
</table>
